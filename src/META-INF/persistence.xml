    <class>entity.Ciudad</class>
    <class>entity.Proveedor</class>
    <class>entity.Empresa</class>
    <class>entity.Vendedor</class>
    <class>entity.Venta</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/sistema_ventas"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
